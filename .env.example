# GitHub OAuth configuration for better-auth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# better-auth configuration
BETTER_AUTH_SECRET=your_secure_random_string_32_chars_minimum
BETTER_AUTH_URL=http://localhost:3000

# Polar.sh configuration (for license key purchases)
POLAR_ACCESS_TOKEN=your_polar_access_token
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret
POLAR_PRODUCT_ID_BASIC=your_polar_product_id
POLAR_PRODUCT_ID_PRO=your_polar_product_id
# Use 'sandbox' for development, 'production' for live
POLAR_SERVER=sandbox

# Database (optional: leave empty to use PGlite for local development)
# For PostgreSQL: DATABASE_URL=postgresql://studio:studio_dev_password@localhost:5432/studio
# DATABASE_URL=
# DATABASE_MIGRATION_FOLDER=./server/db/migrations/postgresql

# for building docker image
POLAR_ORGANIZATION_ID=your_polar_organization_id
POLAR_API_BASE=https://api.polar.sh

# for local development, use the sandbox environment
KUBB_STUDIO_URL=http://localhost:3000
KUBB_STUDIO_LICENSE=KUBB_STUDIO-00000000-0000-0000-0000-000000000000
KUBB_AGENT_TOKEN=
