{
  "extends": "@kubb/ts-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    // "composite": true,
    // "rootDir": "./",
    // "outDir": "./dist",
    // "tsBuildInfoFile": "./build/.tsbuildinfo"
    // add paths also here because when set with `base.json` it will use the `./dist` folder instead of `./src`.
    "types": [
      "vitest/globals",
      "bun-types",
      "../core/globals.d.ts",
      "../config/ts-config/reset.d.ts"
    ],
    "paths": {
      "@kubb/cli": [
        "../cli/src/index.ts"
      ],
      "@kubb/eslint-config": [
        "../config/eslint-config/src/index.ts"
      ],
      "@kubb/tsup-config": [
        "../config/tsup-config/src/index.ts"
      ],
      "@kubb/ts-config": [
        "../config/ts-config/src/index.ts"
      ],
      "@kubb/core": [
        "../core/src/index.ts"
      ],
      "@kubb/core/utils": [
        "../core/src/utils/index.ts"
      ],
      "@kubb/swagger": [
        "../swagger/src/index.ts"
      ],
      "@kubb/swagger-client": [
        "../swagger-client/src/index.ts"
      ],
      "@kubb/swagger-client/client": [
        "../swagger-client/client.ts"
      ],
      "@kubb/swagger-client/ts-client": [
        "../swagger-client/client.ts"
      ],
      "@kubb/swagger-faker": [
        "../swagger-faker/src/index.ts"
      ],
      "@kubb/swagger-tanstack-query": [
        "../swagger-tanstack-query/src/index.ts"
      ],
      "@kubb/swagger-ts": [
        "../swagger-ts/src/index.ts"
      ],
      "@kubb/swagger-zod": [
        "../swagger-zod/src/index.ts"
      ],
      "@kubb/swagger-zodios": [
        "../swagger-zodios/src/index.ts"
      ],
      "@kubb/parser": [
        "../parser/src/index.ts"
      ],
      "@kubb/parser/factory": [
        "../parser/src/factory.ts"
      ],
      "@kubb/react": [
        "../react/src/index.ts"
      ],
      "@kubb/react/jsx-runtime": [
        "../react/src/jsx-runtime.ts"
      ],
      "@kubb/react/client": [
        "../react/src/client/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "./package.json",
    "./tsup.config.ts",
    "./vitest.config.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/types/**"
  ]
  // "references": [
  //   { "path": "../core" },
  //   { "path": "../swagger" },
  //   { "path": "../parser" },
  //   { "path": "../swagger-ts" }
  // ]
}
