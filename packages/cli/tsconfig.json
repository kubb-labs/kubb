{
  "extends": "@kubb/ts-config/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    // "composite": true,
    // "rootDir": ".",
    // "outDir": "./dist",
    // "tsBuildInfoFile": "./build/.tsbuildinfo"
    // add paths also here because when set with `base.json` it will use the `./dist` folder instead of `./src`.
    "types": [
      "vitest/globals",
      "bun-types",
      "../core/globals.d.ts",
      "../config/ts-config/reset.d.ts"
    ],
    "paths": {
      "@kubb/cli": [
        "../cli/src/index.ts"
      ],
      "@kubb/eslint-config": [
        "../config/eslint-config/src/index.ts"
      ],
      "@kubb/tsup-config": [
        "../config/tsup-config/src/index.ts"
      ],
      "@kubb/ts-config": [
        "../config/ts-config/src/index.ts"
      ],
      "@kubb/core": [
        "../core/src/index.ts"
      ],
      "@kubb/core/utils": [
        "../core/src/utils/index.ts"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./package.json",
    "./tsup.config.ts",
    "./vitest.config.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/types/**"
  ]
  // "references": [
  //   { "path": "../swagger" },
  //   { "path": "../core" },
  //   { "path": "../parser" }
  // ]
}
