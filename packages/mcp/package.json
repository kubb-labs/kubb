{
  "name": "@kubb/mcp",
  "version": "4.28.1",
  "description": "Model Context Protocol (MCP) server for Kubb, enabling AI assistants to generate code from OpenAPI specifications.",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "code-generation",
    "openapi",
    "swagger",
    "typescript",
    "codegen",
    "kubb"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kubb-labs/kubb.git",
    "directory": "packages/mcp"
  },
  "license": "MIT",
  "author": "stijnvanhulle",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "bin": {
    "kubb-mcp": "bin/kubb-mcp.cjs"
  },
  "files": [
    "src",
    "dist",
    "bin",
    "!/**/**.test.**",
    "!/**/__tests__/**"
  ],
  "size-limit": [
    {
      "path": "./dist/*.js",
      "limit": "510 KiB",
      "gzip": true
    }
  ],
  "scripts": {
    "build": "tsdown && size-limit",
    "start:mcp": "bun --watch ./src/server.ts",
    "debug:mcp": "npx -y @modelcontextprotocol/inspector node ./bin/kubb-mcp.cjs",
    "clean": "npx rimraf ./dist",
    "lint": "bun biome lint .",
    "lint:fix": "bun biome lint --fix --unsafe .",
    "release": "pnpm publish --no-git-check",
    "release:canary": "bash ../../.github/canary.sh && node ../../scripts/build.js canary && pnpm publish --no-git-check",
    "start": "tsdown --watch",
    "test": "vitest --passWithNoTests",
    "typecheck": "tsc -p ./tsconfig.json --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@kubb/core": "workspace:*",
    "@kubb/react-fabric": "catalog:",
    "@modelcontextprotocol/sdk": "^1.27.1",
    "jiti": "2.5.1",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@kubb/react-fabric": "0.13.0"
  },
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js"
}
