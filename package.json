{
  "name": "kubb",
  "version": "1.0.0",
  "private": true,
  "description": "Kubb monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/kubb-project/kubb.git"
  },
  "license": "MIT",
  "author": "Stijn Van Hulle <stijn@stijnvanhulle.be",
  "type": "module",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/config/eslint-config/*",
      "packages/config/tsup-config/*",
      "packages/config/ts-config/*",
      "docs/*",
      "examples/*",
      "e2e/*"
    ]
  },
  "scripts": {
    "build": "turbo run build --filter='./packages/*' ",
    "build:examples": "turbo run build --filter='./examples/*'",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format:pack": "npx sort-package-json \"package.json\" \"packages/**/**/package.json\" \"examples/*/package.json\" \"docs/package.json\" \"e2e/package.json\"",
    "generate": "turbo run generate && bun format",
    "graph": "nx graph ",
    "lint": "turbo run lint",
    "lint-fix": "turbo run lint-fix",
    "lint:case": "npx case-police --fix",
    "release": "turbo run release --continue",
    "start": "turbo run start --filter='./packages/*'",
    "test": "vitest --coverage",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "turbo run typecheck --filter='./packages/*' --filter='./examples/*'",
    "upgrade": "turbo run upgrade"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@kubb/eslint-config": "workspace:*",
    "@swc/core": "^1.3.62",
    "@types/node": "^20.2.6",
    "@vitest/coverage-v8": "^0.32.0",
    "@vitest/ui": "^0.32.0",
    "bun-types": "^0.6.8",
    "crypto-browserify": "^3.12.0",
    "nx": "^16.3.2",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.3",
    "typescript": "~5.1.3",
    "vitest": "^0.32.0"
  },
  "packageManager": "pnpm@8.3.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.3.0"
  }
}
