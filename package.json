{
  "name": "kubb",
  "version": "1.0.0",
  "private": true,
  "description": "Kubb monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/stijnvanhulle/kubb.git"
  },
  "license": "MIT",
  "author": "Stijn Van Hulle <stijn@stijnvanhulle.be",
  "workspaces": {
    "packages": [
      "packages/**",
      "docs/**",
      "examples/**"
    ]
  },
  "scripts": {
    "build": "turbo run build",
    "generate": "turbo run generate",
    "start": "turbo run start",
    "graph": "nx graph ",
    "lint": "eslint packages/**/*.ts",
    "lint-fix": "eslint packages/**/*.ts --quiet --fix",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "pre-commit": "turbo run pre-commit && pnpm run lint-fix",
    "pre-push": "turbo run pre-push",
    "release": "turbo run release",
    "test": "jest --runInBand --passWithNoTests",
    "test:local": "jest --maxWorkers=50%",
    "test:watch": "jest --maxWorkers=25% --watch",
    "typecheck": "turbo run typecheck",
    "upgrade": "ncu -u && ncu -u --packageFile **/packages/**/package.json"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@swc/core": "^1.3.35",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "assert": "^2.0.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-formatjs": "^4.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "http-browserify": "^1.7.0",
    "https-browserify": "^1.0.0",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "jest-cli": "^29.4.2",
    "jest-environment-jsdom": "^29.4.2",
    "memfs": "^3.4.13",
    "npm-check-updates": "^16.7.4",
    "nx": "^15.6.3",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.4",
    "prettier-eslint": "^15.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "turbo": "^1.7.4",
    "typescript": "^4.9.5",
    "url": "^0.11.0",
    "util": "^0.12.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0"
  },
  "engines": {
    "node": ">=14.18"
  }
}
