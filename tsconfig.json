{
  "extends": "@kubb/ts-config/bundler.json",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "vitest/globals",
      "bun-types",
      "@kubb/ts-config"
    ],
    "paths": {
      "@kubb/core": [
        "packages/core/src/index.ts"
      ],
      "@kubb/types": [
        "packages/types/src/index.ts"
      ],
      "@kubb/core/utils": [
        "packages/core/src/utils/index.ts"
      ],
      "@kubb/core/transformers": [
        "packages/core/src/transformers/index.ts"
      ],
      "@kubb/swagger": [
        "packages/swagger/src/index.ts"
      ],
      "@kubb/swagger-ts": [
        "packages/swagger-ts/src/index.ts"
      ],
      "@kubb/swagger-ts/hooks": [
        "packages/swagger-ts/src/hooks/index.ts"
      ],
      "@kubb/swagger-ts/infer": [
        "packages/swagger-ts/src/infer/index.ts"
      ],
      "@kubb/swagger/hooks": [
        "packages/swagger/src/hooks/index.ts"
      ],
      "@kubb/swagger/utils": [
        "packages/swagger/src/utils/index.ts"
      ],
      "@kubb/react": [
        "packages/react/src/index.ts"
      ]
    }
  },
  "include": [
    "./package.json",
    "./tsup.config.ts",
    "./vitest.config.ts",
    "./eslint.config.js"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
