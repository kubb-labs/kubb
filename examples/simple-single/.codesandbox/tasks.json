{
  "$schema": "https://codesandbox.io/schemas/tasks.json",
  "setupTasks": [
    {
      "name": "Replace workspace:* by latest",
      "command": "node ./.codesandbox/build.js"
    },
    {
      "name": "Install Dependencies",
      "command": "corepack enable && pnpm install"
    }
  ],
  "tasks": {
    "dev": {
      "name": "dev",
      "command": "pnpm dev",
      "runAtStart": true,
      "preview": {
        "port": 5173
      }
    },
    "build": {
      "name": "build",
      "command": "pnpm build",
      "runAtStart": false
    },
    "update": {
      "name": "update",
      "command": "pnpm update",
      "runAtStart": false
    }
  }
}
