{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "sourceMap": true,
    "strictNullChecks": true,
    "outDir": "es",
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "alwaysStrict": true,
    "strict": true
  },
  "include": ["./src/**/*"],
  "exclude": ["**/node_modules", "**/types/**", "**/mocks/**"]
}
