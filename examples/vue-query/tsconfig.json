{
  "compilerOptions": {
    "target": "ES2020",
    /* If NOT transpiling with TypeScript: */
    "module": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "declaration": true,
    "outDir": "es",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "vite.config.ts",
    "shims-vue.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/types/**",
    "**/mocks/**"
  ]
}
