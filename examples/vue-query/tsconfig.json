{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "outDir": "es",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {},
    "alwaysStrict": true,
    "strict": true
  },
  "include": ["./src/**/*", "shims-vue.d.ts"],
  "exclude": ["**/node_modules", "**/types/**", "**/mocks/**"]
}
