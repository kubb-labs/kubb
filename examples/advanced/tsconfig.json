{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@kubb/react",
    "declaration": true,
    "outDir": "es",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "types": [
      "vitest/globals",
      "bun-types",
      "../../packages/core/globals.d.ts",
      "../../packages/swagger-client/globals.d.ts",
      "../../packages/config/ts-config/reset.d.ts"
    ]
  },
  "include": [
    "./src/**/*",
    "configs/kubb.config.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/types/**",
    "**/mocks/**"
  ]
}
