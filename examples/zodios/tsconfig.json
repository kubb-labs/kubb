{
  "compilerOptions": {
    "target": "ES2020",
    /* If NOT transpiling with TypeScript: */
    "module": "ES2020",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "outDir": "es",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "types": [
      "vitest/globals",
      "bun-types",
      "../../packages/core/globals.d.ts",
      "../../packages/swagger-client/globals.d.ts",
      "../../packages/config-ts/reset.d.ts"
    ]
  },
  "include": ["./src/**/*", "kubb.config.js"],
  "exclude": ["**/node_modules", "**/types/**", "**/mocks/**"]
}
